<Page x:Class="EHR_project.View.Generall"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EHR_project.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Generall">

    <Grid Background="LightGray">
        <Label x:Name="lbl_doc_name" Content="Přihlášený lékař:" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <Button x:Name="btn_logout" Content="Odhlásit se" HorizontalAlignment="Left" Margin="715,0,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.43,-0.868" Height="29" Width="85" Click="btn_logout_Click" FontSize="14"/>
        <Label x:Name="lbl_patient_name" Content="Aktuální pacient:" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Margin="307,0,0,0"/>
        <Button x:Name="btn_new_patient" Content="Nový pacient" HorizontalAlignment="Left" Margin="0,34,0,0" VerticalAlignment="Top" Width="126" Click="click_new_patient" FontSize="18" Height="52"/>
    </Grid>
</Page>
